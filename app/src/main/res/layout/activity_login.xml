<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    android:id="@+id/root"
    >
    <LinearLayout android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="250dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:scaleType="fitXY"
            />
     </LinearLayout>
     <LinearLayout

         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:orientation="vertical"
         >


         <LinearLayout
             android:id="@+id/account_linear"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_marginLeft="@dimen/activity_horizontal_margin"
             android:layout_marginRight="@dimen/activity_horizontal_margin"
             android:background="@drawable/login_edit_shape"
             android:orientation="horizontal"
             >
             <ImageView
                 android:layout_width="20.4dp"
                 android:layout_height="30dp"
                 android:layout_marginLeft="15dp"
                 android:src="@drawable/yh"
                 android:layout_gravity="center_vertical"
                 />
             <View
                 android:layout_width="1dp"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="@dimen/activity_ui_margin_medium"
                 android:background="#69857e"
                 android:layout_marginTop="6dp"
                 android:layout_marginBottom="6dp"
                 />
             <EditText
                 android:id="@+id/account_edit"
                 android:singleLine="true"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="8dp"
                 android:layout_gravity="center_vertical"
                 android:background="#00000000"
                 android:hint="请输入您的用户名"
                 android:textColorHint="#657b7c"
                 />
          </LinearLayout>
         <LinearLayout
             android:id="@+id/password_linear"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:layout_marginLeft="@dimen/activity_horizontal_margin"
             android:layout_marginRight="@dimen/activity_horizontal_margin"
             android:layout_marginTop="@dimen/activity_login_margin"
             android:background="@drawable/login_edit_shape"
             android:orientation="horizontal"
             >
             <ImageView
                 android:layout_width="20.4dp"
                 android:layout_height="30dp"
                 android:layout_marginLeft="15dp"
                 android:src="@drawable/mm"
                 android:layout_gravity="center_vertical"
                 />
             <View
                 android:layout_width="1dp"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="@dimen/activity_ui_margin_medium"
                 android:background="#69857e"
                 android:layout_marginTop="6dp"
                 android:layout_marginBottom="6dp"
                 />
             <EditText
                 android:id="@+id/password_edit"
                 android:singleLine="true"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="@dimen/activity_ui_margin_medium"
                 android:layout_gravity="center_vertical"
                 android:background="#00000000"
                 android:hint="请输入您的密码"
                 android:textColorHint="#657b7c"
                 android:password="true"
                 />
         </LinearLayout>
         <LinearLayout android:id="@+id/checkbox_linear"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginTop="@dimen/activity_ui_margin_medium"
             android:layout_marginLeft="@dimen/activity_horizontal_margin"
             android:orientation="horizontal"

             >
             <CheckBox android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:button="@drawable/checkbox_selector"
                 >
             </CheckBox>
             <TextView android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:text="记住密码"
                 android:textColor="@color/white"
                 android:textSize="@dimen/font_size_litte"
                 >

             </TextView>
         </LinearLayout>
         <LinearLayout android:id="@+id/login_btn_linear"
             android:layout_height="44dp"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_marginLeft="@dimen/activity_horizontal_margin"
             android:layout_marginRight="@dimen/activity_horizontal_margin"
             android:layout_marginTop="@dimen/activity_ui_margin_medium"

             >
             <Button android:id="@+id/skdl_btn"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="刷卡登录"
                 android:textColor="@color/white"
                 android:layout_weight="1"
                 android:background="@drawable/skdl_btn_selector"
                 >
             </Button>
             <TextView android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:textColor="@color/black"
                 android:textSize="@dimen/font_size_litte"
                 android:text="or"

                 >

             </TextView>
             <Button android:id="@+id/zjdl_btn"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:background="@drawable/zjdl_btn_selector"
                 android:text="直接登录"
                 android:textColor="@color/white"
                 >
             </Button>
         </LinearLayout>
      </LinearLayout>


</LinearLayout>
