<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"

    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:src="@drawable/yytb_fk"
        />
     <Button
         android:id="@+id/trash_btn"
         android:layout_width="29dp"
         android:layout_height="40dp"
         android:layout_centerVertical="true"
         android:background="@drawable/kdelete_btn_selector"
         android:layout_alignParentRight="true"
         android:layout_marginRight="@dimen/activity_horizontal_margin"
         />
     <LinearLayout
         android:id="@+id/center_content"
         android:layout_toRightOf="@+id/image"
         android:layout_toLeftOf="@+id/trash_btn"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:orientation="vertical"
         >
         <TextView android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="医疗服务"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_litte"
                    android:singleLine="true"
             >
          </TextView>
         <TextView
                     android:id="@+id/introduce"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="快捷，高效，方便"
                     android:singleLine="true"
                     android:textSize="13sp"
                     android:textColor="#9e9e9e"
             >
         </TextView>


                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥6.00"
                    android:textSize="13sp"
                    android:textColor="#e30303"
                    />

         </LinearLayout>
</RelativeLayout>