<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/actionbar_bg"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/action_bar_left_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/activity_ui_margin_medium"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/action_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_bar_non_group_container"
        android:layout_toLeftOf="@+id/action_bar_right_container"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/activity_ui_margin_medium"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_bar_right_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
    </LinearLayout>
</RelativeLayout>