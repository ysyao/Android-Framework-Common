<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.sccl.ilife.android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.sample.login.AccountActivity"
            android:label="@string/title_activity_account" >
        </activity>
        <activity
            android:name=".ui.sample.appinformation.ILifeAppListActivity"
            android:label="@string/title_activity_ilife_app_list" >
        </activity>
        <activity
            android:name=".ui.sample.photoview.PhotoViewListActivity"
            android:label="@string/title_activity_photo_view_list" >
        </activity>
        <activity
            android:name=".ui.sample.waitingflag.ProgressSampleActivity"
            android:label="@string/title_activity_progress" >
        </activity>
        <activity
            android:name=".ui.sample.picturelist.ItemListActivity"
            android:label="@string/title_activity_item_list" >
        </activity>
        <activity
            android:name=".ui.sample.cardapplication.CardApplicationListActivity"
            android:label="@string/title_activity_list_view_animation" >
        </activity>
        <activity
            android:name=".ui.SetActivity"
            android:label="@string/title_activity_list_view_animation" >
        </activity>
        <activity
            android:name=".ui.BuyAppletActivity"
            android:label="@string/title_activity_list_view_animation" >
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:label="@string/title_activity_list_view_animation" >
        </activity>
        <activity
            android:name=".ui.ListItemLayoutTestActivity"
            android:label="@string/title_activity_list_view_animation" >
        </activity>

        <activity
            android:name=".ui.sample.actionbarsample.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".ui.SwipeInActivity"
            android:label="@string/title_activity_list_view_animation" >
        </activity>
    </application>

</manifest>
